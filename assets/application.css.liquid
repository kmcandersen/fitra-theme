:root {
    --main-font: 'Rubik', 'Helvetica Neue', Arial, Helvetica, sans-serif;
    --black: #000000;
    --white: #FFFFFF;
    --color-accent: #FF3700;
    --color-text: #555555;
    --color-label: #707070;
    --color-border: #DEDEDE;
    --color-empty-bg: #BBBBBB;
  
    --line-global: 20px;
    --gutter-global: calc(var(--line-global) * 2);

    --body-font-size: 15px;
    --label-font-size: 12px;

    --standard-border: 1px solid var(--color-border);
    --black-border: 1px solid var(--black);
  }

/* BASE */
  * {
      font-family: var(--main-font);
      box-sizing: border-box;
  }

  html, body {
      width: 100%;
      margin: 0;
      padding: 0;
      color: var(--black);
      line-height: var(--line-global);
  }

  body {
    font-size: var(--body-font-size);
    background-color: var(--white);
  }

  h1, h2, h3, h4, h5, h6, p, ul, ol {
      margin: 0;
      padding: 0;
      font-weight: 400;
  }

  a {
      text-decoration: none;
  }

/* STYLE GUIDE */

.headline-big {
    font-size: 22vw;
    line-height: 1;
}

h2 {
    font-size: calc(var(--body-font-size) * 2);
    line-height: calc(var(--line-global) * 2);
}

h3 {
    font-size: var(--body-font-size);
    line-height: var(--line-global);
}

p, ul, ol {
    font-size: var(--body-font-size);
    line-height: var(--line-global);
    color: var(--color-text);
}

.list-with-stroke {
    list-style-type: none;
}

.list-with-stroke li {
    padding: var(--line-global) 0;
    border-top: var(--standard-border);
}

.list-with-stroke li:last-child {
    border-bottom: var(--standard-border);
}

label {
    font-size: var(--label-font-size);
    color: var(--color-label);
}

/* UTILITY CLASSES */

.grid {
    display: grid;
    grid-column-gap: var(--gutter-global);
    grid-row-gap: var(--gutter-global);
}

/* desktop = two-columns */
.columns {
    grid-template-columns: 1fr 1fr;
}

.valign-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.valign-bottom {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.main-content {
    min-height: 100vh;
    padding: var(--gutter-global);
    width: calc(50% + var(--gutter-global) / 2);
    margin-left: auto;
    grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.sticky-side-image {
    position: fixed;
    left: 0;
    top: var(--gutter-global);
    bottom: var(--gutter-global);
    width: 50%;
    width: calc(50% - var(--gutter-global) / 2);
}

.sticky-side-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* GLOBAL STYLES */

.cart-item-count {
    color: var(--white);
    text-align: center;
    border-radius: 100%;
}

.link-to-cart, .link-to-home {
    position: fixed;
    top: 0;
    right: 0;
    padding: var(--gutter-global);
    color: var(--color-text);
}

.link-to-home {
    color: var(--black);
}

.link-to-cart .cart-item-count {
    display: block;
    font-size: 0px;
    width: 10px;
    height: 10px;
    background: var(--color-border);
    margin-top: 4px;
}

.link-to-cart .cart-text {
    display: none;
    position: absolute;
    right: calc(100% - var(--gutter-global)/2);
    top: var(--gutter-global);
    white-space: nowrap;
}

.link-to-cart.cart-filled .cart-item-count {
    width: 20px;
    height: 20px;
    background: var(--color-accent);
    font-size: var(--label-font-size);
    /* same as height so vertically centered: */
    line-height: var(--line-global);
    margin-top: 0;
}

.link-to-cart:hover .cart-text {
    display: block;
}

/* INDEX STYLES */

#product-info-content {
    grid-row-gap: var(--gutter-global);
}

.single-product-image {
    width: 100%;
    height: 100%;
}

.description-content {
    margin-top: var(--line-global);
    color: var(--color-text);
}

.form-wrapper {
    padding-top: calc(var(--line-global) * 3);
}

#add-to-cart-form {
    margin-top: calc(var(--line-global) * -1);
}


#add-to-cart-button {
    background: var(--color-accent);
}

#add-to-cart-button .product-price {
    float: right;
    font-size: var(--label-font-size);
}

/* SELECT FORM */

.styled-select {
    position: relative;
}

.styled-select .select-arrow {
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    width: calc(var(--line-global) * 3);
    text-align: center;
    line-height: calc(var(--line-global) * 3);
    border-left: var(--black-border);
    pointer-events: none;
}

.styled-select .select-arrow img {
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
}

button,
#product-select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
}

#product-select {
  width: 100%;
  font-size: var(--body-font-size);
  line-height: var(--line-global);
  padding: var(--line-global);
  border: var(--black-border);
}

button {
  width: 100%;
  font-size: var(--body-font-size);
  line-height: var(--line-global);
  padding: var(--line-global);
  background: var(--black);
  color: var(--white);
}

/* CART STYLES */
#cart {
    background: var(--color-empty-bg);
    color: var(--white);
}

#cart a {
    color: inherit;
}

#cart-title {
    position: relative;
}

#cart.cart-filled {
    background: var(--color-accent);
}

#cart:not(.cart-filled) #cart-title {
    text-fill-color: transparent;
    text-stroke-color: var(--white);
    text-stroke-width: 2px;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-color: var(--white);
    -webkit-text-stroke-width: 2px;
    -moz-text-fill-color: transparent;
    -moz-text-stroke-color: var(--white);
    -moz-text-stroke-width: 2px;
    
}

#cart .cart-item-count {
    display: block;
    font-size: 0.08em;
    border: 2px solid var(--white);
    width: 2em;
    height: 2em;
    line-height: 2em;
    position: absolute;
    top: 1em;
    right: 0;
}

#cart.cart-filled .cart-item-count {
    border: 0;
    background: var(--black);
}


#cart.cart-filled #cart-content {
    padding-bottom: calc(var(--line-global) * 8);
    grid-template-rows: auto calc(var(--line-global) * 2);
}

#cart-empty-lines, #back-to-fitra {
    grid-column: 2;
}

.empty-line {
    border-top: 1px solid var(--white);
    height: calc(var(--line-global) * 3);
}

.empty-line:first-child {
    margin-top: var(--line-global);
}

.empty-line:last-child {
    border-bottom: 1px solid var(--white);
}

#back-to-fitra {
    margin-bottom: var(--line-global);
}

table {
    table-layout: fixed;
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
}

th {
    text-align: left;
    font-weight: 400;
    padding-top: var(--line-global);
    padding-bottom: var(--line-global);
}

tbody tr {
    border-top: 1px solid var(--white);
}

td {
    padding-top: var(--line-global);
    padding-bottom: var(--line-global);
    position: relative;
}

td:last-child {
    text-align: right;
    vertical-align: top;
}

.remove-line {
    position: absolute;
    top: 0;
    left: 100%;
    padding: var(--line-global) calc(var(--line-global) / 2);
    display: block;
    text-align: center;
    width: var(--gutter-global);
}

.remove-text {
    position: absolute;
    top: 0;
    right: 100%;
    padding: var(--line-global);
    padding-right: 0;
    display: none;
    background: var(--color-accent);
    color: var(--black);
}

.remove-line:hover .remove-text {
    display: block;
}

#cart-totals {
    border-bottom: 1px solid white;
}

#cart-form-wrap {
    grid-row: span 2;
    position: relative;
}

#checkout-button {
    position: absolute;
    width: 100%;
    bottom: calc(var(--line-global) * -8);
    left: 0;
}

#cart-support p {
color: inherit;
}

/* 404 */

#content-404 a {
    color: var(--black);
}

/* RESPONSIVE STYLES */
.grid > * {
  min-width: 0;
  min-height: 0;
}

@media only screen and (max-width: 1023px) {

    :root {
        --add-to-cart-form-height: 143px;
    }

  .sticky-side-image {
    position: static;
    width: 100%;
    height: 90vw;
  }

  .main-content {
    min-height: 0;
    padding: var(--line-global);
    width: 100%;
    margin: 0 auto;
    grid-template-rows: auto; 
  }

  .grid {
    grid-row-gap: var(--line-global);
  }

  .headline {
    padding-bottom: 0;
  }

  .headline-big {
    font-size: 40vw;
  }

  .columns {
    grid-template-columns: 1fr;
  }

  /* accounting for grid-row-gap */
  .form-wrapper {
    height: calc(var(--add-to-cart-form-height) - var(--line-global)); 
  }

  #add-to-cart-form {
    position: fixed;
    padding: 0 var(--line-global);
    background: var(--white);
    height: var(--add-to-cart-form-height);
    bottom: 0;
    left: 0;
    margin: 0;
    width: 100%;
  }

  #cart-lines td:last-child {
    right: var(--line-global);
  }

  #cart.cart-filled #cart-content {
    padding-bottom: 0;
  }

  #checkout-button {
    position: static;
    margin-top: var(--line-global);
  }
}